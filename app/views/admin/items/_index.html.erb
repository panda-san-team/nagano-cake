<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %>
      <tr class="table-link" data-href="/admin/items/<%= item.id %>">
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item), class: "link" do %>
          <%= item.name %>
          <% end %>
        </td>
        <td><%= item.price.to_s(:delimited)  %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.is_active == "販売中" %>
            <div class="text-success font-weight-bold"><%= item.is_active %></div>
          <% else %>
            <div class="text-muted font-weight-bold"><%= item.is_active %></div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
jQuery(document).on("turbolinks:load", function() {
  $(".table-link").on('click', function() {
      window.location = $(this).data("href");
  });
});
</script>
<%= paginate items, remote: true %>