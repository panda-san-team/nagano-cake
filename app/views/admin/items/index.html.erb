<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3 class="p-3 mb-2 text-secondary">商品一覧</h3>
          <%= link_to new_admin_item_path, class: "btn btn-outline-info rounded-circle" do %>
            <i class="fas fa-plus fa-2x"></i>
          <% end %>
          <table class="table">
            <thead>
              <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜き価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @items.each do |item| %>
                <tr>
                  <td><%= item.id %></td>
                  <td>
                    <%= link_to admin_item_path(item) do %>
                    <%= item.name %>
                    <% end %>
                  </td>
                  <td><%= item.price %></td>
                  <td><%= item.genre.name %></td>
                  <td>
                    <% if item.is_active == true %>
                      <div class="text-success font-weight-bold">販売中</div>
                    <% elsif item.is_active == false %>
                      <div class="text-muted font-weight-bold">販売停止中</div>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <%= paginate @items %>
    </div>
  </div>
</div>
