<div class="field form-group col">
  <%= f.label :"商品画像", class: "form-label" %>
  <%= f.file_field :image, accept: "image/*" %>
</div>
<div class="field form-group col">
  <%= f.label :"商品名", class: "form-label" %>
  <%= f.text_field :name %>
</div>
<div class="field form-group col">
  <%= f.label :"商品説明", class: "form-label" %>
  <%= f.text_area :introduction %>
</div>
<div class="field form-group col">
  <%= f.label :"ジャンル", class: "form-label" %>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name, prompt: "選択してください") %>
</div>
<div class="field form-group col">
  <%= f.label :"税抜価格", class: "form-label" %>
  <%= f.text_field :price %>円
</div>
<div class="field form-group col">
  <%= f.radio_button :is_active, "販売中" %>
  <%= f.label :is_active, "販売中", class: "m-0" %>
  <%= f.radio_button :is_active, "販売停止中" %>
  <%= f.label :is_active, "販売停止中", class: "m-0" %>
</div>
<div class="actions form-group text-center">
  <%= f.submit new:"新規登録", edit:"変更を保存", class: "btn btn-success" %>
</div>

