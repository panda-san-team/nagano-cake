<%= form_with (model: item, local: true) do |f| %>
<div class="item_form">
  <%= f.label :"商品画像", class: "form-label" %>
  <%= f.file_field :image, accept: "image/*" %>
</div>
<div class="item_form">
  <%= f.label :"商品名", class: "form-label" %>
  <%= f.text_field :name %>
</div>
<div class="item_form">
  <%= f.label :"商品説明", class: "form-label" %>
  <%= f.text_area :introduction %>
</div>
<div class="item_form">
  <%= f.label :"ジャンル", class: "form-label" %>
  <%= f.collection_select :genre_id, genres, :genre_id, :name, { prompt: "選択してください" } %>
</div>
<div class="item_form">
  <%= f.label :"税抜き価格", class: "form-label" %>
  <%= f.text_field :price %>円
</div>
<div class="item_form">
  <%= form_with(model: item, local: true) do |form| %>
    <%= form.radio_button :is_active, :true %>
    <%= form.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
    <%= form.radio_button :is_active, :false %>
    <%= form.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
  <% end %>
</div>
<% end %>
