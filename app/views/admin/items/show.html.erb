<div class="container px-5 px-sm-0">
  <div class="row my-4">
    <h3 class="col-5 text-center pb-2">商品詳細</h3>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-4 text-center">
      <%= image_tag @item.image, size:"300x320" %>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-6">
      <table class="table">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格<br>
              (税抜価格)
          </th>
          <td><%= @item.with_tax_price.to_s(:delimited) %>
              (<%= @item.price.to_s(:delimited) %>)円
          </td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active == "販売中" %>
              <div class="text-success font-weight-bold"><%= @item.is_active %></div>
            <% else %>
              <div class="text-muted font-weight-bold"><%= @item.is_active %></div>
            <% end %>
          </td>
        </tr>
      </table>
      <div class="text-center"><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %></div>
    </div>
    <div class="col-md-1"></div>
  </div>
</div>