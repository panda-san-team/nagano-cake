<h2>商品編集</h2>
<% if @item.errors.any? %>
    <%= @item.errors.count %>errors prohibited this obj from being saved:
    <ul>
    <% @item.errors.full_messages.each do |message| %>
         <li><%= message %></li>
    <% end %>
    </ul>
<% end %>
  <%= form_with model: @item, url: admin_item_path(@item), method: :patch, local: true do |f| %>
  <div class="item_form">
    <%= f.label :"商品画像", class: "form-label" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="item_form">
    <%= f.label :"商品名", class: "form-label" %>
    <%= f.text_field :name %>
  </div>
  <div class="item_form">
    <%= f.label :"商品説明", class: "form-label" %>
    <%= f.text_area :introduction %>
  </div>
  <div class="item_form">
    <%= f.label :"ジャンル", class: "form-label" %>
    <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name, prompt: "選択してください") %>
  </div>
  <div class="item_form">
    <%= f.label :"税抜き価格", class: "form-label" %>
    <%= f.text_field :price %>円
  </div>
  <div class="item_form">
     <%= f.select :is_active, [["販売中", true], ["販売停止中", false]], {prompt: true}, class:"form-controlcol-md-2"  %>
  </div>
  <div class="item_form">
    <%= f.submit new:"新規登録", edit:"変更を保存", class: "btn btn-success" %>
  </div>
<% end %>


