<div class="container px-5 px-sm-0">
  <div class="row my-4">
    <h3 class="col-5 text-center pb-2">商品編集</h3>
  </div>
  <div class="row">
    <div class="col-8 mx-auto">
      <%= render 'layouts/error', obj: @item %>
      <%= form_with model: @item, url: admin_item_path(@item), method: :patch, local: true do |f| %>
       <%= render 'item_form', f: f %>
      <% end %>
    </div>
  </div>
</div>