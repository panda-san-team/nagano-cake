<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr class="table-link" data-href="/admin/customers/<%= customer.id %>">
      <td><%= customer.id %></td>
      <td>
        <%= link_to admin_customer_path(customer), class: "link" do %>
        <%= customer.full_name %>
        <% end %>
      </td>
      <td><%= customer.email %></td>
      <% if customer.is_deleted == "有効" %>
        <td class="text-success font-weight-bold"><%= customer.is_deleted %></td>
      <% else %>
        <td class="text-black-50 font-weight-bold"><%= customer.is_deleted %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<script>
jQuery(document).on("turbolinks:load", function() {
  $(".table-link").on('click', function() {
      window.location = $(this).data("href");
  });
});
</script>
<%= paginate @customers, remote: true %>