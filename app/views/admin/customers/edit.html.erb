<h2><%= @customer.full_name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path do |f| %>
  <table>
    <tr class="field">
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr class="field">
      <th>氏名</th>
      <td>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </td>
    </tr>
    <tr class="field">
      <th>フリガナ</th>
      <td>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </td>
    </tr>
    <tr class="field">
      <th>郵便番号</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr class="field">
      <th>住所</th>
      <td><%= f.text_field :address, size: 60 %></td>
    </tr>
    <tr class="field">
      <th>電話番号</th>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr class="field">
      <th>メールアドレス</th>
      <td><%= f.email_field :email %></td>
    </tr>
    <tr class="field">
      <th>会員ステータス</th>
      <td>
        <%= f.radio_button :is_deleted, "有効" %>
        <%= f.label :is_deleted, "有効" %>
        <%= f.radio_button :is_deleted, "退会" %>
        <%= f.label :is_deleted, "退会" %>
      </td>
    </tr>
    <tr class="actions">
      <th></th>
      <td><%= f.submit "変更を保存" %></td>
    </tr>
  </table>
<% end %>