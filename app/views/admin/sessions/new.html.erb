<div class="container px-5 px-sm-0">
  <div class="row my-4">
    <h3 class="col-5 text-center pb-2">管理者ログイン</h3>
  </div>
  <div class="row justify-content-center">
    <div class="col-8 mx-auto">
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="form-group col">
          <%= f.label :メールアドレス, class:"col-md-3" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-md-5 form-control-static' %>
        </div>

        <div class="form-group col">
          <%= f.label :パスワード, class:"col-md-3" %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'col-md-5 form-control-static' %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>