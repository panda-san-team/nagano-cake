<div class='container'>
  <div class='row justify-content-center'>
    <div class="col-md-8 mt-1">
        <i class="fas fa-edit genre_icon"></i>
        <span class="genre_title">ジャンル編集</span>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-8 mx-auto px-5 py-3 mb-3 genre_item">
      <%= render 'layouts/error', obj: @genre %>
      <%= form_with model: @genre, url: admin_genre_path(@genre), local:true, class:"genre_form" do |f| %>
        <table class="table">
          <tr>
            <th>ジャンル名</th>
            <td>
              <%= f.text_field :name %>
            </td>
            <td>
              <%= f.submit "編集を保存", class: "btn genre_btn" %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>