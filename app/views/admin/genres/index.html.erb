<div class="container">
<div class="row justify-content-center">
  <div class="col-md-8">
    <h3 class="p-3 mb-2 text-secondary">ジャンル一覧・追加</h3>
      <div class="row">
        <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
          <table class="table">
            <tr>
              <th>ジャンル名</th>
              <td>
                <%= f.text_field :name %>
              </td>
              <td>
                <%= f.submit "新規登録", class: "btn btn-success" %>
              </td>
            </tr>
          </table>
        <% end %>
      </div>
      <div class="row">
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>
</div>