<div class="container px-5 px-sm-0">
  <div class="row justify-content-center my-4">
    <div class="col-md-6 text-center">
      <%= image_tag @item.get_image(400,400) %>
    </div>
    <div class= "col-md-6 item-show">
      <h3 class="item-name text-center mt-5"><%= @item.name %></h3>
      <br>
      <p class="item-introduction text-center"><%= @item.introduction %></p>
      <h4>
        ¥ <%= @item.price.to_s(:delimited) %>
        <span>(税込)</span>
      </h4>
      <%= form_with model:@cart_item, url: cart_items_path, method: :post do |f| %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.select :amount,*[1..10].to_a, include_blank: '個数選択' %>
        <%= f.submit "カートに入れる", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>