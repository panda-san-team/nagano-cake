<div class="container px-5 px-sm-0">
  <div class="row justify-content-center my-4">
    <div class="col-md-5 mr-5 text-center">
      <%= image_tag @item.get_image(400,400) %>
    </div>
    <div class= "col-md-6 item-show">
      <h4 class="item-name text-center mt-3"><%= @item.name %></h3>
      <br>
      <p class="item-introduction text-center"><%=safe_join(@item.introduction.split("\n"),tag(:br))%></p>
      <h4 class="item-price mt-5">
        ¥ <%= @item.price.to_s(:delimited) %>
        <span style="font-size: 12px;">(税込)</span>
      </h4>
      <%= form_with model:@cart_item, url: cart_items_path, method: :post, class:"item-cart-form justify-content-end" do |f| %>
        <div class="cp_ipselect cp_sl04 mr-2">
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.select :amount,*[1..10].to_a, include_blank: '個数' %>
        </div>
        <div class="item-cart-btn">
          <%= button_tag(type: "submit", class: "cart-button") do %>
            <i class="fas fa-shopping-cart"></i> カートに入れる
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>