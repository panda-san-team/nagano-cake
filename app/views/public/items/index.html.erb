<div class="container">
  <div class="row">
    <div class="col-10">
      <h1>商品一覧</h1>
      <span>(全<%= @items.count %>件)</span>
    </div>
    <% @items.each do |item| %>
    <div class="col-10">
      <div class="card">
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.get_image(200,150) %>
        <% end %>
        <div class="card-body">
          <p class="card-title"><%= item.name %></p>
          <p class="card-text">¥<%= item.price.to_s(:delimited) %> </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <%= paginate @items %>
</div>