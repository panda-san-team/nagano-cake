<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10 mt-5">
      <%= form_with model: @customer, url: customers_path, method: :patch do |f| %>
      <%= render "public/shared/error_messages", resource: @customer %>
      <div class="row">
        <div class="col-md-4"><i class="fas fa-user-edit info_edit_page_icon"></i></div>
        <div class="col-md-8 mt-5"><h4 class="info_edit_title">会員情報を編集する</h4></div>
      </div>

      <div class="row">
        <div class="col mb-5 p-5 info_edit_form">
          <%= f.label :"氏名", class:"col-sm-2 control-label" %>
          <%= f.text_field :last_name, autofocus: true, class:"col-sm-2 form-control-static name input_area" %>
          <%= f.text_field :first_name, autofocus: true, class:"col-sm-2 ml-5 form-control-static name input_area"%><br>

          <%= f.label :"フリガナ", class:"col-sm-2 control-label" %>
          <%= f.text_field :last_name_kana, autofocus: true, class:"col-sm-2 form-control-static name input_area" %>
          <%= f.text_field :first_name_kana, autofocus: true, class:"col-sm-2 ml-5 form-control-static name input_area" %><br>

           <%= f.label :"郵便番号", class:"col-sm-2 control-label" %>
          <%= f.text_field :postal_code, autofocus: true, class:"col-sm-2 ml-1 form-control-static input_area" %><br>

          <%= f.label :"住所", class:"col-sm-2 control-label" %>
          <%= f.text_field :address, autofocus: true, class:"col-sm-7 ml-1 form-control-static input_area" %><br>

          <%= f.label :"電話番号", class:"col-sm-2 control-label" %>
          <%= f.text_field :telephone_number, autofocus: true, class:"col-sm-2 ml-1 form-control-static input_area" %><br>

          <%= f.label :"メールアドレス", class:"col-sm-2 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-sm-2 ml-1 form-control-static input_area" %>

          <div class="row mt-3">
            <div class="col-md-8 ml-3 text-center">
              <%= button_tag(type: "submit", class:"btn text-light info_edit_save") do %>
              <i class="fas fa-star"></i> 編集内容を保存
              <% end %>
            </div>
            <div class="col-md-3 text-right">
              <%= link_to customers_quit_path, class:"btn text-light ml-5 customer_out" do %>
              <i class="fas fa-sad-tear"></i> 退会する
              <% end %>
            </div>
          </div>

        </div>
      </div>

      <% end %>
    </div>

    <div class="col-md-1"></div>
  </div>
</div>

