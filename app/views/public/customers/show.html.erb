<div class="container">
  <div class="row mt-5">
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-4"><i class="fas fa-user my_page_icon"></i></div>
        <div class="col-md-8 mt-5 text-center"><h3 class="title_h3">マイページ</h3></div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7 p-5 mb-5 my-page-info">
      <div class="row">
        <div class="col-md-3 mt-2 text-right">
          <p><strong class="info-title">登録情報</strong></p>
        </div>
        <div class="col-md-9 text-right">
          <%= link_to edit_customers_path, class:"btn text-right info_to_edit" do %>
            編集する
            <i class="fas fa-user-edit"></i>
          <% end %>
        </div>
      </div>

      <div class="mt-3 pl-5 pr-5 ">
        <table class="table table-sm table-borderless info_table">
          <tbody>
            <tr>
              <th style="width: 30%">氏名</th>
              <td><%= @customer.last_name %><%= @customer.first_name %></td>
            </tr>
            <tr>
              <th>カナ</th>
              <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="mt-4">
        <div class="row">
          <div class="col text-right">
            <%= link_to orders_path, class:"btn info_to_order_index" do %>
              注文履歴一覧を見る
              <i class="fas fa-shopping-bag"></i>
            <% end %>

            <%= link_to addresses_path, class:"btn info_to_address_index" do %>
              配送先一覧を見る
              <i class="fas fa-truck"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-5 my-page-visual mb-5"></div>

  </div>
</div>