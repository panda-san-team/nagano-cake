<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h3 class="head-line title_h3">マイページ</h3>
      <div class="row mt-3">
        <div class="col-md-2 mt-2">
          <p><strong>登録情報</strong></p>
        </div>
        <div class="col-md-3">
          <%= link_to "編集する", edit_customers_path, class:"btn btn-success" %>
        </div>
      </div>

      <div class="mt-3">
        <table class="table table-bordered table-condensed">
          <tbody>
            <tr>
              <th>氏名</th>
              <td><%= @customer.last_name %><%= @customer.first_name %></td>
            </tr>
            <tr>
              <th>カナ</th>
              <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <div class="col-md-2">
            <p><strong>配送先</strong></p>
          </div>
          <div class="col-md-3">
            <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2">
            <p><strong>注文履歴</strong></p>
          </div>
          <div class="col-md-3">
            <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>