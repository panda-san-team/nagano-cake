<div class='container'>
  <div class='row justify-content-start'>
    <div class="col mt-3">
        <i class="fas fa-shopping-bag order_icon"></i>
        <span class="order_index_title">注文履歴一覧</span>
    </div>
  </div>
  <div class="container mb-5 p-5 order_index">
    <div class="row justify-content-center">
    <table class='table order_index_table table-inverse my-2 mx-3'>
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              <%= "〒" + order.postal_code.to_s.insert(3, "-")  %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td>
              <% order.items.each do |item| %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= order.total_payment %>円</td>
            <td><%= order.status_i18n %></td>
            <td>
              <%= link_to order_path(order.id), class:"order_index_btn" do %>
                表示する
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>