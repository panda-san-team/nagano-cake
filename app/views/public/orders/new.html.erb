<div class="container px-5 px-sm-0">
  <div><%= flash[:order_notice] %></div>
  <div class="row my-4 justify-content-center pb-2">
    <div class="col-md-8 justify-content-center order-form-box">
      <h3 class="order-title text-center my-3">注文情報入力</h3>
        <%= form_with model:@order, url: "/orders/confirm", method: :post, class:"order-form py-2 mx-5" do |f| %>
          <h5><i class="fas fa-cookie-bite"></i>お支払方法</h5>
          <div class="field form-group">
            <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>

            <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
          </div>
          <h5><i class="fas fa-cookie-bite"></i>お届け先</h5>
          <div class="field form-group">
            <%= f.radio_button :select_address, 0 %><%= f.label :ご自身の住所 %>
            <div>
              <%= "〒" +current_customer.postal_code %>
              <%= current_customer.address %><br>
              <%= current_customer.last_name+current_customer.first_name %>
            </div>

            <%= f.radio_button :select_address, 1 %><%= f.label :登録済みの住所から選択 %>
            <div class>
              <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
            </div>

            <%= f.radio_button :select_address, 2 %><%= f.label :新しいお届け先 %>
            <div class="row">
              <div class="col-9">
                <div class="row mb-2">
                  <%= f.label :郵便番号（ハイフンなし）, class: "col-3" %>
                  <%= f.text_field :postal_code, class: "col-4" %>
                </div>
                <div class="row mb-2">
                  <%= f.label :住所, class: "col-3" %>
              	  <%= f.text_field :address, class: "col-9" %>
                </div>
                <div class="row mb-2">
                  <%= f.label :宛名, class: "col-3" %>
              	  <%= f.text_field :name, class: "col-4" %>
                </div>
              </div>
            </div>
          </div>
          <div class="row form-group">
            <button type="submit" class="order-submit-btn">
              <i class="fas fa-check-square"></i> 確認画面へ進む
            </button>
          </div>
        <% end %>
      </div>
  </div>
</div>