<div class="container my-4">
  <div class="row">
    <h3>注文情報確認</h3>
  </div>

  <div class="row">
    <div class="col-7">
    <table class="table table-bordered" style="height: 100px;">
      <thead class="thead-light">
        <tr>
          <th class="text-center">商品名</th>
          <th class="text-center">単価（税込）</th>
          <th class="text-center">数量</th>
          <th class="text-center">小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td class="align-middle">
              <%= image_tag cart_item.item.get_image(150, 100) %><br>
              <%= cart_item.item.name %>
            </td>
            <td class="align-middle">
              <%= cart_item.item.with_tax_price.to_s(:delimited) %>
            </td>
            <td class="align-middle">
              <%= cart_item.amount %>
            </td>
            <td class="align-middle">
              <%= cart_item.subtotal.to_s(:delimited) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-4 offset-1">
  <table class="table table-bordered">
    <tr>
      <td>送料</td>
      <td>800</td>
    </tr>
    <tr>
      <td>商品合計</td>
      <td><%= @total_price.to_s(:delimited) %></td>
    </tr>
    <tr>
      <td>請求金額</td>
      <td><%= @total_payment.to_s(:delimited) %></td>
    </tr>
  </table>
</div>
</div>

<div class="px-3">
  <div class="row mt-3">
    <h5 class="mr-3"><b>支払方法</b></h5><span><%= @order.payment_method_i18n %></span>
  </div>
  
  <div class="row">
    <h5 class="mr-3"><b>お届け先</b></h5><span><%= "〒" + @order.postal_code + @order.address %><br><%= @order.name %></span>
  </div>
</div>

<%= form_with model:@order, url:orders_path, method: :post do |f| %>
  <%= f.hidden_field :postal_code, :value => @order.postal_code %>
  <%= f.hidden_field :address, :value => @order.address %>
  <%= f.hidden_field :name, :value => @order.name %>
  <%= f.hidden_field :shipping_cost, :value => @shipping_cost %>
  <%= f.hidden_field :total_payment, :value => @total_payment %>
  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  <div class="row px-3 mt-3">
    <%= f.submit "注文を確定する", class:"btn btn-success btn-lg" %>
  </div>
<% end %>
</div>