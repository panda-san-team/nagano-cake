<div class="container">
  <div class="row text-center">
    <div class="col mt-3">
      <i class="fas fa-check confirm_icon"></i>
      <h3>注文情報確認</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2"></div>
      <div class="col-md-8">
        <h5>1. ご請求金額</h5>
        <table class="table table-bordered">
          <tr>
            <td style="width: 40%">送料</td>
            <td>￥800</td>
          </tr>
          <tr>
            <td style="width: 40%">商品合計</td>
            <td>￥<%= @total_price.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td style="width: 40%">ご請求金額</td>
            <td class="order_total_price">￥<strong><%= @total_payment.to_s(:delimited) %><strong></td>
          </tr>
        </table>
      </div>
     <div class="col-md-2"></div>
  </div>
  <div class="row mt-3">
    <div class="col-md-2"></div>
      <div class="col-md-8">
        <h5>2. ご注文商品</h5>
        <table class="table table-bordered" style="height: 100px;">
          <thead class="thead-light">
            <tr>
              <th></th>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
              <tr>
                <td class="align-middle text-center">
                  <%= image_tag cart_item.item.get_image(100, 100) %>
                </td>
                <td class="align-middle"><%= cart_item.item.name %></td>
                <td class="align-middle">
                  <%= cart_item.item.with_tax_price.to_s(:delimited) %>
                </td>
                <td class="align-middle">
                  <%= cart_item.amount %>
                </td>
                <td class="align-middle">
                  <%= cart_item.subtotal.to_s(:delimited) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <div class="col-md-2"></div>
  </div>
  <div class="px-3">
    <div class="row mt-3">
      <div class="col-md-2"></div>
      <div class="col-md-2"><h5 class="mr-3">3.お支払方法</h5></div>
      <div class="col-md-6"><span><%= @order.payment_method_i18n %></span></div>
      <div class="col-md-2"></div>
    </div>

    <div class="row mt-3">
      <div class="col-md-2"></div>
      <div class="col-md-2"><h5 class="mr-3">4.お届け先</h5></div>
      <div class="col-md-6"><span><%= "〒" + @order.postal_code %><br>&emsp;<%= @order.address %><br>&emsp;<%= @order.name %>&emsp;様</span></div>
      <div class="col-md-2"></div>
    </div>
  </div>

  <%= form_with model:@order, url:orders_path, method: :post do |f| %>
    <%= f.hidden_field :postal_code, :value => @order.postal_code %>
    <%= f.hidden_field :address, :value => @order.address %>
    <%= f.hidden_field :name, :value => @order.name %>
    <%= f.hidden_field :shipping_cost, :value => @shipping_cost %>
    <%= f.hidden_field :total_payment, :value => @total_payment %>
    <%= f.hidden_field :payment_method, :value => @order.payment_method %>
    <div class="row px-3 mt-5 mb-5 text-center">
      <div class="col">
        <%= f.submit "注文を確定する", class:"btn col-md-5 order_btn" %>
      </div>
    </div>
  <% end %>
</div>