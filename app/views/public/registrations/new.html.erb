<div class="sign_up-bg">
<div class="container d-flex justify-content-center py-5">
  <%= render "layouts/error", obj: resource %>
  <div><%= flash[:session_alert] %></div>
    <div class="form-row customer-sign_up-form">
      <%= form_with model: @customer, url: customer_registration_path, method: :post, class: "col-12" do |f| %>
        <h4 class="text-center font-weight-bold">新規会員登録</h4>
        <br>
        <table class="table table-borderless">
        <tr class="form-item mb-2 col-auto">
          <th><%= f.label :"名前" %></th>
          <td>
            <%= f.text_field :last_name, autofocus: true, placeholder: "(姓)", class:"sign_up-form-style" %>
            <%= f.text_field :first_name, autofocus: true, placeholder: "(名)", class:"sign_up-form-style" %>
          </td>
        </tr>
        <tr class="form-item mb-2 col-auto">
          <th><%= f.label :"フリガナ" %></th>
          <td>
            <%= f.text_field :last_name_kana, autofocus: true, placeholder: "(セイ)", class:"sign_up-form-style" %>
            <%= f.text_field :first_name_kana, autofocus: true, placeholder: "(メイ)", class:"sign_up-form-style" %>
          </td>
        </tr>
        <tr class="form-item mb-2 col-auto">
          <th><%= f.label :"メールアドレス" %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "（例）nagano-cake@xxx.co.jp", class:"col-11 sign_up-form-style" %></td>
        </tr>
        <tr class="form-item mb-2 col-auto">
          <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
          <td><%= f.text_field :postal_code, autofocus: true, placeholder: "（例）2220001", class:"col-11 sign_up-form-style" %></td>
        </tr>
        <tr class="form-item mb-2 col-auto">
          <th><%= f.label :"住所" %></th>
          <td><%= f.text_field :address, autofocus: true, placeholder: "（例）長野県xx市xx町1-1-1", class:"col-11 sign_up-form-style" %></td>
        </tr>
        <tr class="form-item mb-2 col-auto">
          <th><%= f.label :"電話番号(ハイフンなし)" %></th>
          <td><%= f.text_field :telephone_number, autofocus: true, placeholder: "（例）05012345678", class:"col-11 sign_up-form-style" %></td>
        </tr>
        <tr class="form-item mb-2 col-auto">
          <th><%= f.label :"パスワード" %></th>
          <td><%= f.password_field :password, autocomplete: "new-password", placeholder: "半角英数字（6文字以上）", class:"col-11 sign_up-form-style" %></td>
        </tr>
        <tr class="form-item mb-2 col-auto">
          <th><%= f.label :"パスワード(確認用)" %></th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "半角英数字（6文字以上）", class:"col-11 sign_up-form-style" %></td>
        </tr>
      </table>
        <div class="form-item mb-4 col d-flex justify-content-center">
          <%= f.submit "新規登録", class:"customer-sign_up-submit" %>
        </div>
      <% end %>
      <div class="col text-center">
        <h7 class="font-weight-bold">既に登録済みの方</h7><br />
        <p><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p>
      </div>
  </div>
</div>
</div>
