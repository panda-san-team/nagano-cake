<div class="container">
  <div class="row">
    <div class="col">
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <h4 class="text-center">新規会員登録</h4>
    <br>
    <div class="field form-group col">
      <%= f.label :"名前", class:"col-sm-2 control-label" %>
      <%= f.label :"(姓)", class:"col-sm-1 control-label" %>
      <%= f.text_field :last_name, autofocus: true, class:"col-sm-3 form-control-static name" %>
      <%= f.label :"(名)", class:"col-sm-1 control-label" %>
      <%= f.text_field :first_name, autofocus: true, class:"col-sm-3 form-control-static name"%>
    </div>
    <div class="field form-group col">
      <%= f.label :"フリガナ", class:"col-sm-2 control-label" %>
      <%= f.label :"(セイ)" , class:"col-sm-1 control-label"%>
      <%= f.text_field :last_name_kana, autofocus: true, class:"col-sm-3 form-control-static name" %>
      <%= f.label :"(メイ)", class:"col-sm-1 control-label" %>
      <%= f.text_field :first_name_kana, autofocus: true, class:"col-sm-3 form-control-static name" %>
    </div>
    <div class="field form-group col">
      <%= f.label :"メールアドレス", class:"col-sm-3 control-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-sm-4 ml-1 form-control-static" %>
    </div>
    <div class="field form-group col">
      <%= f.label :"郵便番号（ハイフンなし）", class:"col-sm-3 control-label" %>
      <%= f.text_field :postal_code, autofocus: true, class:"col-sm-4 ml-1 form-control-static" %>
    </div>
    <div class="field form-group col">
      <%= f.label :"住所", class:"col-sm-3 control-label" %>
      <%= f.text_field :address, autofocus: true, class:"col-sm-4 ml-1 form-control-static" %>
    </div>
    <div class="field form-group col">
      <%= f.label :"電話番号（ハイフンなし）", class:"col-sm-3 control-label" %>
      <%= f.text_field :telephone_number, autofocus: true, class:"col-sm-4 ml-1 form-control-static" %>
    </div>
    <div class="field form-group col">
      <%= f.label :"パスワード（６文字以上）", class:"col-sm-3 control-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class:"col-sm-4 ml-1 form-control-static" %>
    </div>
    <div class="field form-group col">
      <%= f.label :"パスワード（確認用）", class:"col-sm-3 control-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-sm-4 ml-1 form-control-static" %>
    </div>
    <div class="actions form-group text-center">
      <%= f.submit "新規登録", class:"btn btn-success col-sm-3" %>
    </div>
    <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h7>既に登録済みの方</h7><br />
      <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
    </div>
  </div>
</div>
