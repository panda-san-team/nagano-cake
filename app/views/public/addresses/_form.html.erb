<%= form_with model: address, url: addresses_path, method: :post do |f| %>
   <%= f.label :"郵便番号（ハイフンなし）", class:"col-sm-3 control-label" %>
   <%= f.text_field :postal_code, autofocus: true, class:"col-sm-4 ml-1 form-control-static" %>
              
   <%= f.label :"住所", class:"col-sm-3 control-label" %>
   <%= f.text_field :address, autofocus: true, class:"col-sm-7 ml-1 form-control-static" %>
              
   <%= f.label :"宛名", class:"col-sm-3 contrl-label" %>
   <%= f.text_field :name, class:"col-md-3" %>
<% end %>