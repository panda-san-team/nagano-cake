<div class="container">
  <div class="row mt-3">
    <div class="col">
      <h4>配送先登録/一覧</h4>
      <div class="row mt-5">
        <div class="col-md-12">
        <%= render 'form', address: @address %>
        </div>
      </div>

      <div class="row mt-5">
        <div class="col-md-7">
          <table class="table table-bordered table-condensed">
            <thead>
              <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th col="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @addresses.each do |address| %>
              <%= link_to "新規登録", addresses_path, method: :post, class:"btn btn-success" %>
                <tr>
                  <td><%= address.postal_code %></td>
                  <td><%= address.address %></td>
                  <td><%= address.name %></td>
                  <td>
                    <%= link_to "編集する", edit_address_path(address), class:"btn btn-success" %>
                    <%= link_to "削除する", address_path(address), method: :delete, class:"btn btn-danger" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>